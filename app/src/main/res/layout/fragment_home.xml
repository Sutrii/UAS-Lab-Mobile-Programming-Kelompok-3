<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".home.HomeFragment">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:id="@+id/home_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/sapa_user"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hai, Lala!"
            android:textStyle="bold"
            android:textSize="30sp"/>

        <TextView
            android:id="@+id/tanya_user"
            android:layout_marginLeft="20dp"
            android:layout_below="@id/sapa_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mau masak apa hari ini?"
            android:textStyle="bold"
            android:textSize="30sp"/>

        <TextView
            android:id="@+id/judul_kategori"
            android:layout_below="@id/tanya_user"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="25dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kategori Resep"
            android:textSize="25sp"/>

        <Button
            android:id="@+id/button_semua"
            android:layout_below="@id/judul_kategori"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:text="Semua"
            android:textSize="13sp"
            style="@style/ActiveButton"
            android:textColor="@color/white"/>

        <Button
            android:id="@+id/button_makanan"
            android:layout_below="@id/judul_kategori"
            android:layout_toRightOf="@id/button_semua"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="12dp"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:text="Makanan"
            android:textSize="13sp"
            style="@style/InactiveButton"
            android:textColor="@color/red"/>

        <Button
            android:id="@+id/button_minuman"
            android:layout_below="@id/judul_kategori"
            android:layout_toRightOf="@id/button_makanan"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="12dp"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:text="Minuman"
            android:textSize="13sp"
            style="@style/InactiveButton"
            android:textColor="@color/red"/>

        <FrameLayout
            android:id="@+id/ContainerCategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/button_makanan"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="20dp"
            android:layout_centerInParent="true">

        </FrameLayout>

    </RelativeLayout>
</ScrollView>